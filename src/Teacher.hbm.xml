<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate.Teacher" table="teacher" schema="public" catalog="StudentDB">
        <id name="teacherId">
            <column name="teacher_id" sql-type="varchar(8)" length="8"/>
        </id>
        <property name="teacherName">
            <column name="teacher_name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>