<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate.Clazz" table="class" schema="public" catalog="StudentDB">
        <id name="classId" >
            <column name="class_id" sql-type="varchar(6)" length="6"/>
        </id>

        <property name="numberOfStudent">
            <column name="number_of_student" sql-type="integer" not-null="true"/>
        </property>
        <property name="numberOfMale">
            <column name="number_of_male" sql-type="integer" not-null="true"/>
        </property>
        <property name="numberOfFemale">
            <column name="number_of_female" sql-type="integer" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>